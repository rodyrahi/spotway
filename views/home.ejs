<link href="https://fonts.googleapis.com/css2?family=Noto+Sans+JP&family=Oswald:wght@500;600&family=Poppins:wght@300;700&family=Roboto+Mono:wght@400;500&family=Rubik:wght@600&family=Ysabeau+Infant:wght@700&display=swap" rel="stylesheet">



<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css">
    <style>
        /* Center the container */

        .cont {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            grid-gap: 10px;
        }

        .item {
            background-color: #eaeaea;
            padding: 20px;
            text-align: center;
            border: 0.5px rgb(214, 214, 214) solid;
        }
        body {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }
    </style>
</head>
<body style="font-family: 'Ysabeau Infant', sans-serif;">
    <div class="container " >
        <h1 class="fw-bold text-center">SPOTWAY</h1>
        <!-- Carousel -->
        <div id="carouselExampleIndicators" class="carousel slide" data-bs-interval="false">

            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="image1.jpg" class="d-block w-100" alt="Image 1">
                    <h1 class="fw-bold" >Let's Get Started</h1>
                    <p class="text-muted" style="font-family: 'Rubik', sans-serif; font-weight: 400;">Finding Parking & Fuel Stations got lot more easier and simpler , just sign up and navigate to your desired location</p>

                </div>
                <div class="carousel-item">
                    <img src="image2.jpg" class="d-block w-100" alt="Image 2">
                    <h1 class="fw-bold" >Let's Get Started</h1>
                    <p class="text-muted" style="font-family: 'Rubik', sans-serif; font-weight: 400;">Finding Parking & Fuel Stations got lot more easier and simpler , just sign up and navigate to your desired location</p>

                </div>
                <div class="carousel-item">
                        <h3>Select Language</h3>
                    <div class="cont">
                        <div class="item rounded shadow">English</div>
                        <div class="item rounded shadow">Hindi</div>
                        <div class="item rounded shadow">Telgu</div>
                        <div class="item rounded shadow">Malyalam</div>
                        <div class="item rounded shadow">Mrathi</div>
                        <div class="item rounded shadow">Gujrati</div>
                    </div>
                </div>



            </div>



        </div>
        <div class="text-end mt-3" >
            <a href="#carouselExampleIndicators" class="btn btn-dark rounded-pill " id="next"  data-bs-slide="next" onclick="nextSlide()">Next</a>
            <a href="/login" class="btn btn-primary d-none rounded-pill " id="next3">Next</a>

            
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        let click = 0
        function nextSlide() {
            click +=1
            if (click<2) {
                document.getElementById('carouselExampleIndicators').carousel('next');
            }
            else{
                click = 0
                document.getElementById('next').classList.add('d-none');

                document.getElementById('next3').classList.remove('d-none');

            }

        }
    </script>
</body>
</html>
